<idea-plugin xmlns:xi="http://www.w3.org/2001/XInclude">
    <depends>com.jetbrains.rider-cpp</depends>
    <xi:include href="/META-INF/core-debugger-only.xml" xpointer="xpointer(/idea-plugin/*)"/>

    <extensions defaultExtensionNs="com.intellij">
        <programRunner implementation="org.rust.rider.debugger.runconfig.RsRiderDebugRunner"/>
        <programRunner implementation="org.rust.rider.debugger.runconfig.legacy.RsRiderDebugRunnerLegacy"/>
    </extensions>

    <extensions defaultExtensionNs="org.rust">
        <debugger.driverConfigurationProvider
            implementation="org.rust.rider.debugger.RsRiderDebuggerDriverConfigurationProvider"/>
    </extensions>
</idea-plugin>
